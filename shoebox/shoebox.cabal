category:            Language
build-type:          Simple
cabal-version:       >=1.10

library
  exposed-modules:     DatabaseParser, Shoebox,
                       ShoeboxSampleDatabase, GUI 
  build-depends:       base >=4.8 && <4.9
                     , containers
                     , hspec
                     , random
                     , text
                     , parsec
                     , time
                     , process
                     , yesod
                     , aeson
  hs-source-dirs:      src
  default-language:    Haskell2010

executable shoebox
  main-is:             Main.hs
  build-depends:       base >=4.8 && <4.9
                       ,shoebox
                       ,yesod

  hs-source-dirs:      main
  default-language:    Haskell2010
  ghc-options:         -threaded

test-suite specs
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base,
                       shoebox,
                       hspec,
                       QuickCheck
  default-language:    Haskell2010
